# DataLeash Environment Variables
# Copy this file to .env.local and fill in your values

# ===========================================
# REQUIRED - Supabase Configuration
# Get these from https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api
# ===========================================
NEXT_PUBLIC_SUPABASE_URL=https://YOUR_PROJECT.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# ===========================================
# App Configuration
# ===========================================
# For local development:
NEXT_PUBLIC_APP_URL=http://localhost:3000

# For Vercel production (set in Vercel dashboard):
# NEXT_PUBLIC_APP_URL=https://your-app.vercel.app

# Admin email addresses (comma-separated)
ADMIN_EMAILS=admin@dataleash.io

# ===========================================
# AI & Email Services
# ===========================================
# Groq AI (for threat detection)
# Get from https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key_here

# Email (Resend)
# Get from https://resend.com/api-keys
RESEND_API_KEY=your_resend_api_key_here
RESEND_FROM_EMAIL=noreply@yourdomain.com

# ===========================================
# Payment Providers (Optional)
# ===========================================
# PayPal - Get from https://developer.paypal.com/dashboard/applications
NEXT_PUBLIC_PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=
PAYPAL_PLAN_ID=

# Stripe - Get from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=

# Ko-fi Webhook
KOFI_VERIFICATION_TOKEN=

# ===========================================
# Optional: Enhanced Security
# ===========================================
# Cloudflare (for additional protection)
CLOUDFLARE_ZONE_ID=
CLOUDFLARE_API_TOKEN=
